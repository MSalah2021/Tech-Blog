<div class="row">
    <div class="col-md-6">
    <h2>Signup</h2>

    <form class="form signup-form">
      <div class="form-group">
        <label for="user-signup">username:</label>
        <input class="form-input" type="text" id="username-input-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup">password:</label>
        <input class="form-input" type="password" id="password-input-signup" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit" id="signup-form">signup</button>
      </div>
      <a class="login-link" href="/login">Log in instead</a>
    </form>
  </div>
</div>

<script src="./js/signup.js"></script>
