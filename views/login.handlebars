<div class="row">
  <div class="col-md-6">
    <h2>Login</h2>

    <form class="form login-form">
      <div class="form-group">
        <label for="user-login">username:</label>
        <input class="form-input" type="text" id="username-input-login" />
      </div>
      <div class="form-group">
        <label for="password-login">password:</label>
        <input class="form-input" type="password" id="password-input-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit"  id="login-form">login</button>
      </div>
      <a class="signup-link" href="/signup">Sign up instead</a>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>
